<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="com.owori.android.presenter.model.DdayData" />
        <import type="com.owori.android.presenter.model.FamilyInfo" />

        <variable
            name="vm"
            type="com.owori.android.presenter.main.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_ffeeb2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/family_name"
                style="@style/TextTitle.01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@{vm.familyInfo.name}"
                tools:text="우당탕탕 우리 가족 ❤️" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clickable="true"
                android:onClick="@{() -> vm.onClickNoticeButton()}"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="@id/family_name"
                app:layout_constraintEnd_toStartOf="@id/profile"
                app:layout_constraintTop_toTopOf="parent"
                android:focusable="true">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/notice"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginEnd="12dp"
                android:onClick="@{() -> vm.onClickEmotionButton()}"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="@id/family_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/profile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/emotionRecyclerView"
                android:layout_width="0dp"
                android:overScrollMode="never"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/family_name"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:orientation="horizontal"
                tools:itemCount="3"
                tools:listitem="@layout/item_family_member" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/title_bar"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/title_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dDayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/dDayTitle"
                    android:includeFontPadding="false"
                    style="@style/TextTitle.01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/d_day_title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="36dp"
                    android:background="@drawable/shp_dotted_line_r12"
                    android:visibility="@{vm.dDayList.size() > 0 ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dDayTitle"
                    app:layout_constraintVertical_bias="0.304">

                    <TextView
                        style="@style/TextBodyRegular.02"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/d_day_content"
                        android:textAlignment="center"
                        android:textColor="@color/grey_787878"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dDayRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:visibility="@{vm.dDayList.size() > 0 ? View.VISIBLE : View.GONE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dDayTitle"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_d_day"
                    tools:orientation="horizontal" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/familyPhotoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/dDayLayout">

                <TextView
                    android:id="@+id/familyPhotoTitle"
                    style="@style/TextTitle.01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:includeFontPadding="false"
                    android:text="@string/family_photo_title"
                    app:layout_goneMarginTop="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

<!--                <androidx.constraintlayout.widget.ConstraintLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="228dp"-->
<!--                    android:layout_marginHorizontal="36dp"-->
<!--                    android:background="@drawable/shp_dotted_line_r12"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toBottomOf="@id/familyPhotoTitle">-->

<!--                    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        app:layout_constraintBottom_toBottomOf="parent"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintStart_toStartOf="parent"-->
<!--                        app:layout_constraintTop_toTopOf="parent">-->

<!--                        <TextView-->
<!--                            android:id="@+id/family_photo_content_text"-->
<!--                            style="@style/TextBodyRegular.02"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/family_photo_content"-->
<!--                            android:textAlignment="center"-->
<!--                            android:textColor="@color/grey_787878"-->
<!--                            app:layout_constraintEnd_toEndOf="parent"-->
<!--                            app:layout_constraintStart_toStartOf="parent"-->
<!--                            app:layout_constraintTop_toTopOf="parent" />-->

<!--                        <Button-->
<!--                            android:id="@+id/photo_plus_button"-->
<!--                            android:layout_width="28dp"-->
<!--                            android:layout_height="28dp"-->
<!--                            android:layout_marginTop="12dp"-->
<!--                            android:background="@drawable/plus_icon"-->
<!--                            app:layout_constraintEnd_toEndOf="parent"-->
<!--                            app:layout_constraintStart_toStartOf="parent"-->
<!--                            app:layout_constraintTop_toBottomOf="@+id/family_photo_content_text" />-->

<!--                    </androidx.constraintlayout.widget.ConstraintLayout>-->

<!--                </androidx.constraintlayout.widget.ConstraintLayout>-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/familyPhotoRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/familyPhotoTitle"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_family_photo"
                    tools:orientation="horizontal" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wordEachOtherLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/familyPhotoLayout">

                <TextView
                    android:id="@+id/wordEachOtherTitle"
                    style="@style/TextTitle.01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="48dp"
                    android:includeFontPadding="false"
                    android:text="@string/word_to_each_other_title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/myWordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@id/wordEachOtherTitle">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/messageBubbleLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/profileLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/messageBubbleContentLayout"
                            android:layout_width="0dp"
                            android:layout_height="66dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="14dp"
                            android:background="@drawable/shp_grey_r12"
                            android:padding="12dp"
                            app:layout_constraintEnd_toEndOf="@+id/messageBubbleTail"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/myWordEachOther"
                                style="@style/TextBodyRegular.02"
                                android:layout_width="0dp"
                                android:includeFontPadding="false"
                                android:layout_height="0dp"
                                android:text="@{vm.familyInfo.me.word == null ? @string/word_to_each_other_content : vm.familyInfo.me.word}"
                                android:textColor="@color/black"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/myWordEditorView"
                                android:visibility="@{vm.isEditMode == true ? View.VISIBLE : View.GONE}"
                                android:layout_width="0dp"
                                style="@style/TextBodyRegular.02"
                                android:includeFontPadding="false"
                                android:background="@color/grey_f5f5f5"
                                android:layout_height="0dp"
                                android:lines="2"
                                android:hint="@string/word_to_each_other_content"
                                android:text="@{vm.familyInfo.me.word == null ? `` : vm.familyInfo.me.word}"
                                android:maxLines="2"
                                android:maxLength="50"
                                app:layout_constraintBottom_toBottomOf="@+id/myWordEachOther"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/myWordEachOther" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/writeMyWordLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:visibility="@{vm.familyInfo.me.word == null &amp;&amp; vm.isEditMode == false ? View.VISIBLE : View.GONE}"
                            app:layout_constraintTop_toBottomOf="@id/messageBubbleContentLayout"
                            app:layout_constraintEnd_toEndOf="@+id/messageBubbleContentLayout"
                            android:onClick="@{() -> vm.onClickWriteMyWordButton()}">

                            <TextView
                                android:id="@+id/writeMyWordTextView"
                                style="@style/TextCaptionMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:textColor="@color/owori_red"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/wirte_my_word"
                                tools:text="작성하기" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/editMyWordLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:visibility="@{vm.familyInfo.me.word != null &amp;&amp; vm.isEditMode == false ? View.VISIBLE : View.GONE}"
                            app:layout_constraintTop_toBottomOf="@id/messageBubbleContentLayout"
                            app:layout_constraintEnd_toEndOf="@+id/messageBubbleContentLayout">

                            <TextView
                                android:id="@+id/deleteMyWordTextView"
                                style="@style/TextCaptionMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:textColor="@color/grey_464646"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/delete_my_word"
                                android:onClick="@{() -> vm.onClickDeleteMyWordButton()}"
                                tools:text="삭제하기" />

                            <TextView
                                android:id="@+id/editMyWordTextView"
                                style="@style/TextCaptionMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:textColor="@color/grey_464646"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/deleteMyWordTextView"
                                android:layout_marginStart="20dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:onClick="@{() -> vm.onClickEditMyWordButton()}"
                                android:text="@string/edit_my_word"
                                tools:text="수정하기" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/editingMyWordLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:visibility="@{vm.isEditMode == true ? View.VISIBLE : View.GONE}"
                            app:layout_constraintTop_toBottomOf="@id/messageBubbleContentLayout"
                            app:layout_constraintEnd_toEndOf="@+id/messageBubbleContentLayout">

                            <TextView
                                android:id="@+id/editCancelMyWordTextView"
                                style="@style/TextCaptionMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:textColor="@color/grey_464646"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/edit_cancel_my_word"
                                android:onClick="@{() -> vm.onClickEditCancelMyWordButton()}"
                                tools:text="수정취소" />

                            <TextView
                                android:id="@+id/editCompleteMyWordTextView"
                                style="@style/TextCaptionMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:textColor="@color/grey_464646"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/editCancelMyWordTextView"
                                android:layout_marginStart="20dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:onClick="@{() -> vm.onClickEditCompleteMyWordButton()}"
                                android:text="@string/edit_complete_my_word"
                                tools:text="수정완료" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:id="@+id/messageBubbleTail"
                            android:layout_width="16dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/message_bubble_tail_right"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/profileLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/myProfileImage"
                            setCircleImageView="@{vm.familyInfo.me.profileImage}"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:elevation="3dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:background="@drawable/member_profile" />

                        <TextView
                            style="@style/TextBodyRegular.03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@{vm.familyInfo.me.name}"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/myProfileImage"
                            tools:text="고삼이(나)" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/familyMemberWordRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/myWordLayout"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_family_member_word" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>