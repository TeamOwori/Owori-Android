<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.owori.android.presenter.model.PostData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/preview_image_view"
            android:foreground="?attr/selectableItemBackground"
            setRoundedCornerImageView="@{data.photoList[0] != null ? data.photoList[0].imageSrc : @drawable/resource_default}"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/ex_post_img" />

        <ImageView
            android:id="@+id/gallery_image_view"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/icon_gallery"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:visibility="@{data.photoList.size() > 1 ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="@+id/preview_image_view"
            app:layout_constraintTop_toTopOf="@+id/preview_image_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>