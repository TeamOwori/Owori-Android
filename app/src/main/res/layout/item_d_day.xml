<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="data"
            type="com.owori.android.presenter.model.DdayData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="12dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_marginVertical="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:outlineAmbientShadowColor="@color/grey_464646"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:paddingBottom="14dp">

                <TextView
                    android:id="@+id/dDay"
                    android:layout_width="wrap_content"
                    style="@style/TextTitle.02"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="@{data.dDay}"
                    android:textColor="@{data.dDay == `D-day` ? @color/owori_red : @color/black}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:textColor="@color/owori_red"
                    tools:text="D-day" />

                <TextView
                    android:id="@+id/eventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.date}"
                    android:layout_marginTop="36dp"
                    style="@style/TextBodyRegular.03"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/grey_464646"
                    tools:text="3월 6일 (월)" />

                <TextView
                    android:id="@+id/eventName"
                    style="@style/TextSubTitle.01"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp"
                    android:text="@{data.name}"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/eventDate"
                    app:layout_constraintTop_toBottomOf="@+id/dDay"
                    tools:text="고삼이 생일파티 아웃백에서" />

                <Button
                    android:id="@+id/closeButton"
                    android:layout_marginTop="14dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/close_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>