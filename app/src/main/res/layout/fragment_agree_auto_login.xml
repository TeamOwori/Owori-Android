<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presenter.policy.AgreeAutoLoginFragment">

    <TextView
        android:id="@+id/auto_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAppearance="@style/TextTitle.02"
        android:includeFontPadding="false"
        android:text="@string/auto_login_title"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/auto_login_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextBodyMedium.03"
        android:includeFontPadding="false"
        android:text="@string/auto_login_subtitle"
        android:textColor="@color/grey_909090"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auto_login_title" />

    <Button
        android:id="@+id/auto_login_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/make_code_background"
        android:includeFontPadding="false"
        android:textAppearance="@style/TextBodyMedium.00"
        android:paddingVertical="12dp"
        android:text="@string/auto_login_ok"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/auto_login_subtitle" />

    <Button
        android:id="@+id/auto_login_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/no_background"
        android:textAppearance="@style/TextBodyMedium.00"
        android:includeFontPadding="false"
        android:paddingVertical="12dp"
        android:text="@string/auto_login_no"
        android:textColor="@color/grey_909090"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auto_login_ok"
        android:layout_marginBottom="70dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>