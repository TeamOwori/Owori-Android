<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.owori.android.auth.ui.viewmodel.PolicyViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_button_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:onClick="@{()->vm.onClickBackButton()}"
                    android:src="@drawable/arrow_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/close_button"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="end"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:onClick="@{()->vm.onClickBackButton()}"
                    android:src="@drawable/close"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/policy_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top_button_frame">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/nickname_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/nickname_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="18dp"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:includeFontPadding="false"
                            android:text="@string/nickname_title"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:text="@string/nickname_edittext_title"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toTopOf="@id/nickname_et"
                            app:layout_constraintStart_toStartOf="@id/nickname_et" />

                        <EditText
                            android:id="@+id/nickname_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="48dp"
                            android:fontFamily="@font/notosanskr_medium"
                            android:hint="@string/nickname_edittext_hint"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:maxLength="7"
                            android:maxLines="1"
                            android:text="@={vm._nickName}"
                            android:textSize="16sp"
                            app:layout_constraintTop_toBottomOf="@+id/nickname_title"
                            tools:layout_editor_absoluteX="20dp" />

                        <TextView
                            android:id="@+id/nickname_length"
                            setNickNameLength="@{vm.nickName}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanskr_light"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/nickname_et"
                            app:layout_constraintEnd_toStartOf="@id/nickname_limit"
                            app:layout_constraintTop_toTopOf="@id/nickname_et" />

                        <TextView
                            android:id="@+id/nickname_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/notosanskr_light"
                            android:includeFontPadding="false"
                            android:text="@string/nickname_length_limit"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/nickname_et"
                            app:layout_constraintEnd_toEndOf="@id/nickname_et"
                            app:layout_constraintTop_toTopOf="@id/nickname_et" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/birthdate_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/birthdate_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="18dp"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:includeFontPadding="false"
                            android:text="@string/birthdate_title"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/birthdate_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:text="@string/birthdate_subtitle"
                            android:textColor="@color/grey_909090"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="@id/birthdate_title"
                            app:layout_constraintTop_toBottomOf="@id/birthdate_title" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:text="@string/birthdate_edittext_title"
                            android:textSize="17sp"
                            app:layout_constraintBottom_toBottomOf="@id/birthdate_et"
                            app:layout_constraintStart_toStartOf="@id/birthdate_et"
                            app:layout_constraintTop_toTopOf="@id/birthdate_et" />

                        <EditText
                            android:id="@+id/birthdate_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="48dp"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingHorizontal="70dp"
                            android:text="@={vm._birthDate}"
                            android:textSize="16sp"
                            app:layout_constraintTop_toBottomOf="@+id/birthdate_subtitle"
                            tools:layout_editor_absoluteX="20dp" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/group_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/group_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="18dp"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:includeFontPadding="false"
                            android:text="@string/family_group_title"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:text="@string/family_group_edittext_title"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toTopOf="@id/group_et"
                            app:layout_constraintStart_toStartOf="@id/group_et" />

                        <EditText
                            android:id="@+id/group_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="48dp"
                            android:fontFamily="@font/notosanskr_medium"
                            android:hint="@string/nickname_edittext_hint"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:text="@={vm._groupName}"
                            android:textSize="16sp"
                            app:layout_constraintTop_toBottomOf="@+id/group_title"
                            tools:layout_editor_absoluteX="20dp" />

                        <TextView
                            android:id="@+id/group_length"
                            setNickNameLength="@{vm.groupName}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanskr_light"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/group_et"
                            app:layout_constraintEnd_toStartOf="@id/group_limit"
                            app:layout_constraintTop_toTopOf="@id/group_et" />

                        <TextView
                            android:id="@+id/group_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/notosanskr_light"
                            android:includeFontPadding="false"
                            android:text="@string/family_group_length_limit"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/group_et"
                            app:layout_constraintEnd_toEndOf="@id/group_et"
                            app:layout_constraintTop_toTopOf="@id/group_et" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/family_connect_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/family_connect_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="18dp"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:includeFontPadding="false"
                            android:text="@string/family_connect_title"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/family_connect_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:text="@string/family_connect_subtitle"
                            android:textColor="@color/grey_909090"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="@id/family_connect_title"
                            app:layout_constraintTop_toBottomOf="@id/family_connect_title" />

                        <ImageView
                            android:id="@+id/share_picture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="70dp"
                            android:src="@drawable/share_pricture"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/family_connect_subtitle" />

                        <Button
                            android:id="@+id/make_code_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/make_code_background"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:onClick="@{()-> vm.onClickMakeCodeButton()}"
                            android:text="@string/make_family_code"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            app:layout_constraintTop_toBottomOf="@+id/share_picture"
                            tools:layout_editor_absoluteX="30dp" />

                        <Button
                            android:id="@+id/received_code_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/received_code_background"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:onClick="@{()-> vm.onClickReceivedCodeButton()}"
                            android:text="@string/received_family_code"
                            android:textColor="@color/owori_red"
                            android:textSize="17sp"
                            app:layout_constraintTop_toBottomOf="@+id/make_code_button" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/share_code_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/share_code_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="18dp"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:includeFontPadding="false"
                            android:text="@string/share_code_title"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/share_code_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:src="@drawable/family_code"
                            app:layout_constraintTop_toBottomOf="@id/share_code_title" />

                        <TextView
                            android:id="@+id/share_code_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="65dp"
                            android:fontFamily="@font/notosanskr_medium"
                            android:textColor="@color/blue_1C86FF"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="@id/share_code_img"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/share_code_img" />

                        <TextView
                            android:id="@+id/share_code_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/share_code_img" />

                        <Button
                            android:id="@+id/share_code_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/share_code_background"
                            android:fontFamily="@font/notosanskr_medium"
                            android:onClick="@{()->vm.onClickShareCodeButton()}"
                            android:paddingHorizontal="15dp"
                            android:text="@string/share_code_button"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/share_code_time" />

                        <TextView
                            android:id="@+id/share_code_explain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="15dp"
                            android:bufferType="spannable"
                            android:fontFamily="@font/notosanskr_regular"
                            android:text="@string/share_code_explain"
                            android:textAlignment="center"
                            android:textColor="@color/grey_C6C6C6"
                            app:layout_constraintTop_toBottomOf="@id/share_code_button" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/input_code_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/input_code_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="18dp"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:includeFontPadding="false"
                            android:text="@string/input_code_title"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/input_code_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:text="@string/input_code_subtitle"
                            android:textColor="@color/grey_909090"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="@id/input_code_title"
                            app:layout_constraintTop_toBottomOf="@id/input_code_title" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:text="@string/input_code_edittext_title"
                            android:textSize="17sp"
                            app:layout_constraintBottom_toBottomOf="@id/input_code_et"
                            app:layout_constraintStart_toStartOf="@id/input_code_et"
                            app:layout_constraintTop_toTopOf="@id/input_code_et" />

                        <EditText
                            android:id="@+id/input_code_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="48dp"
                            android:fontFamily="@font/notosanskr_medium"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingHorizontal="70dp"
                            android:text="@={vm._groupCode}"
                            android:textSize="16sp"
                            app:layout_constraintTop_toBottomOf="@+id/input_code_subtitle"
                            tools:layout_editor_absoluteX="20dp" />

                        <TextView
                            android:id="@+id/input_code_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanskr_regular"
                            android:includeFontPadding="false"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="@id/input_code_et"
                            app:layout_constraintTop_toBottomOf="@id/input_code_et" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/agree_service_condition_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/agree_condition_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="18dp"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:includeFontPadding="false"
                            android:text="@string/agree_condition_title"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/service_checkbox_frame"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="50dp"
                            app:layout_constraintTop_toBottomOf="@id/agree_condition_title">

                            <CheckBox
                                android:id="@+id/service_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@{vm.serviceChecked == true ? @color/owori_red : @color/grey_C6C6C6}"
                                android:checked="@={vm._serviceChecked}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:drawableStart="@android:color/transparent"
                                android:drawablePadding="10dp"
                                android:onClick="@{()->vm.onClickCheckBox()}"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:text="@string/agree_service_condition"
                                android:textColor="@color/black"
                                android:textSize="17sp"/>


                            <ImageButton
                                android:id="@+id/service_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:src="@drawable/arrow_next"
                                android:onClick="@{()->vm.onClickService()}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/personal_info_checkbox_frame"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/service_checkbox_frame">

                            <CheckBox
                                android:id="@+id/personal_info_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@{vm.personalInfoChecked == true ? @color/owori_red : @color/grey_C6C6C6}"
                                android:checked="@={vm._personalInfoChecked}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:drawableStart="@android:color/transparent"
                                android:drawablePadding="10dp"
                                android:onClick="@{()->vm.onClickCheckBox()}"
                                android:fontFamily="@font/notosanskr_medium"
                                android:includeFontPadding="false"
                                android:text="@string/agree_personal_info_collection"
                                android:textColor="@color/black"
                                android:textSize="17sp"/>



                            <ImageButton
                                android:id="@+id/personal_info_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:src="@drawable/arrow_next"
                                android:onClick="@{()->vm.onClickPersonalInfo()}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/input_code_explain_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/input_code_explain_background"
            android:padding="10dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/viewpager_button">

            <TextView
                android:id="@+id/input_code_explain_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:text="@string/input_code_explain_title"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/input_code_explain_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="@string/input_code_explain_first"
                android:textColor="@color/grey_626262"
                app:drawableStartCompat="@drawable/dot"
                app:layout_constraintTop_toBottomOf="@+id/input_code_explain_title" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="@string/input_code_explain_second"
                android:textColor="@color/grey_626262"
                app:drawableStartCompat="@drawable/dot"
                app:layout_constraintTop_toBottomOf="@+id/input_code_explain_first" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/viewpager_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="bottom"
            android:background="@drawable/ripple_check_button"
            android:enabled="false"
            android:fontFamily="@font/pretendard_bold"
            android:onClick="@{()-> vm.onClickCheckButton()}"
            android:text="@{vm.currentIndex == 6 ? @string/agree_condition : @string/policy_check}"
            android:textColor="@color/grey_909090"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/policy_check" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/indicator_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="36dp"
            android:textColor="@color/black_050708"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="PolicyFragment"/>

            <ImageView
                android:id="@+id/first_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@{vm.currentIndex == 0 ? @drawable/focused_nickname : @drawable/unfocused_nickname}"
                app:layout_constraintStart_toStartOf="parent"
                tools:src="@drawable/focused_nickname" />

            <View
                android:id="@+id/nav_line1"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/navigation_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/first_indicator"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/nav_line2"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/navigation_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nav_line1"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/second_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:src="@{vm.currentIndex == 1 ? @drawable/focused_birthdate : @drawable/unfocused_birthdate}"
                app:layout_constraintStart_toEndOf="@id/nav_line2"
                tools:src="@drawable/unfocused_birthdate" />

            <View
                android:id="@+id/nav_line3"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/navigation_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/second_indicator"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/nav_line4"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/navigation_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nav_line3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/third_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:src="@{vm.currentIndex == 2 ? @drawable/focused_connect : @drawable/unfocused_connect}"
                app:layout_constraintStart_toEndOf="@+id/nav_line4"
                tools:src="@drawable/unfocused_connect" />

            <View
                android:id="@+id/nav_line5"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/navigation_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/third_indicator"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/nav_line6"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/navigation_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nav_line5"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fourth_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:src="@{vm.currentIndex == 3 ? @drawable/focused_group : @drawable/unfocused_group}"
                app:layout_constraintStart_toEndOf="@+id/nav_line6"
                tools:src="@drawable/unfocused_group" />

            <View
                android:id="@+id/nav_line7"
                android:layout_width="10dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/navigation_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fourth_indicator"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/nav_line8"
                android:layout_width="10dp"
                android:layout_height="4dp"
